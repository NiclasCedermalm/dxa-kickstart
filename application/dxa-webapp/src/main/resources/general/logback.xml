<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="org.hibernate" level="WARN"/>
    <!--
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type" level="TRACE"/>
    -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.web" level="WARN"/>
    <logger name="org.dd4t" level="INFO"/>
    <logger name="com.tridion" level="WARN"/>
    <logger name="com.sdl.webapp" level="DEBUG"/>
    <logger name="com.sdl.context.image" level="DEBUG"/>

    <!--
    <logger name="com.tridion.preview.web" level="DEBUG"/>
    -->

    <!--
    <logger name="com.tridion.storage.session" level="DEBUG"/>
    -->
    <!--
    <logger name="com.tridion.webservices.odata" level="DEBUG"/>
    -->
</configuration>
